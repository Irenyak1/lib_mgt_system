doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Add Book
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(href='/css/styles.css' rel='stylesheet')
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    a.navbar-brand(href='/') Library Management Dashboard
    //- h4.card-title Welcome #{currentUser.firstName}
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav.ms-auto
        li.nav-item
          a.nav-link(href='/books/addBook') Add Book
        li.nav-item
          a.nav-link(href='/users/addUser') Add User
        li.nav-item
          a.nav-link(href='/authors/addAuthor') Add Author
        li.nav-item
          a.nav-link(href='/logout') Logout
.container.d-flex.justify-content-center.align-items-center.min-vh-100
  .row.justify-content-center
    .col-md-6
      .add-book-form.p-4
        h2.text-center.mb-4 Add Book
        form#add-book-form(action='/books/addBook' method='POST' name='addBookForm') 
          .mb-3
            label.form-label(for='bookId') Book ID
            input#bookId.form-control(type='text' name='bookId')
          .mb-3
            label.form-label(for='bookName') Book Name
            input#bookName.form-control(type='text' name='bookName')
          .mb-3
            label.form-label(for='authorId') Author Name
            select#authorName.form-control(name='authorName')
              each author in authors
                option(value=author._id) #{author.fullName}
          .mb-3
            label.form-label(for='genre') Genre
            select#genre.form-control(name='genre')
              option(value='') Select Genre
              option(value='fiction') Fiction
              option(value='poetry') Poetry
              option(value='science') Science
              option(value='humor') Humor
              option(value='history') History
          .mb-3
            label.form-label(for='numCopies') Number of Copies
            input#numCopies.form-control(type='number' name='numCopies')
          .text-center
            button.btn.btn-primary(type='submit') Add Book
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')
