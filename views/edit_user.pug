doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Add User
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(href='/css/styles.css' rel='stylesheet')
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    a.navbar-brand(href='/') Library Management Dashboard
    //- h4.card-title Welcome #{currentUser.firstName}
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav.ms-auto
        li.nav-item
          a.nav-link(href='/books/addBook') Add Book
        li.nav-item
          a.nav-link(href='/users/addUser') Add User
        li.nav-item
          a.nav-link(href='/authors/addAuthor') Add Author
        li.nav-item
          a.nav-link(href='/logout') Logout
.container.d-flex.justify-content-center.align-items-center.vh-100
  .edit-user-form
    h2.text-center.mb-4 Edit User Details
    form#edit-user-form(action="/users/updateUser?id="+user._id method='POST' name='edituserForm')
      .mb-3
        label.form-label(for='userID') User ID
        input#userID.form-control(type='text' name='userID' value=user.userID)
      .mb-3
        label.form-label(for='fullName') Full Name
        input#fullName.form-control(type='text' name='fullName' value=user.fullName)
      .mb-3
        label.form-label(for='email') Email
        input#email.form-control(type='email' name='email' value=user.email)
      .mb-3
        label.form-label(for='mobileNumber') Mobile Number
        input#mobileNumber.form-control(type='tel' name='mobileNumber' value=user.mobileNumber)
      .text-center
        button.btn.btn-primary(type='submit') Register User
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')

