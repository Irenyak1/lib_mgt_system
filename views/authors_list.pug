doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Library Books
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet')
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    a.navbar-brand(href='/') Library Management Dashboard
    h4.card-title Welcome #{currentUser.firstName}
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav.ms-auto
        li.nav-item
          a.nav-link(href='/books/addBook') Add Book
        li.nav-item
          a.nav-link(href='/users/addUser') Add User
        li.nav-item
          a.nav-link(href='/authors/addAuthor') Add Author
        li.nav-item
          a.nav-link(href='/logout') Logout
.container
    h2.text-center.mt-5.mb-4 All Registered Authors
    table.table.table-striped
        thead
        tr
            th(scope='col') Author ID
            th(scope='col') Name
            th(scope='col') Action
            th
        tbody
            if authors.length
            each author in authors
              tr
                td #{author.authorId}
                td #{author.fullName}
                td
                  a.btn.btn-primary.btn-sm(href='/authors/updateAuthor/'+author._id) Update
                td
                  form(method="post" action='/authors/deleteAuthor')
                    input(type="hidden", placeholder="", name="id", value=author._id)
                    button.btn.btn-danger.btn-sm(type="submit") Delete
            else
                p No Auhors yet :(

script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')
