doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Return Book
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet')
  link(href='/css/styles.css' rel='stylesheet')
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    a.navbar-brand(href='/') Library Management Dashboard
    //- h4.card-title Welcome #{currentUser.firstName}
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav.ms-auto
        li.nav-item
          a.nav-link(href='/books/addBook') Add Book
        li.nav-item
          a.nav-link(href='/users/addUser') Add User
        li.nav-item
          a.nav-link(href='/authors/addAuthor') Add Author
        li.nav-item
          a.nav-link(href='/logout') Logout
.container.d-flex.justify-content-center.align-items-center.vh-100
  .return-book-form
    h2.text-center.mb-4 Return Book
    form
      .row.mb-3
        .col
          label.form-label(for='borrower') Borrower
          select#borrower.form-control(name='borrower' required='')
            option(value='') Select Borrower
            option(value='1') Borrower 1
            option(value='2') Borrower 2
            option(value='3') Borrower 3
        .col
          label.form-label(for='bookId') Book ID
          select#bookId.form-control(name='bookId' required='')
            option(value='') Select Book ID
            option(value='1') Book ID 1
            option(value='2') Book ID 2
            option(value='3') Book ID 3
      .row.mb-3
        .col
          label.form-label(for='bookName') Book Name
          select#bookName.form-control(name='bookName' required='')
            option(value='') Select Book Name
            option(value='Book 1') Book 1
            option(value='Book 2') Book 2
            option(value='Book 3') Book 3
        .col
          label.form-label(for='issueDate') Issue Date
          input#issueDate.form-control(type='date' name='issueDate' required='')
      .row.mb-3
        .col
          label.form-label(for='specifiedReturnDate') Specified Return Date
          input#specifiedReturnDate.form-control(type='date' name='specifiedReturnDate' required='')
        .col
          label.form-label(for='actualReturnDate') Actual Return Date
          input#actualReturnDate.form-control(type='date' name='actualReturnDate' required='')
      .row.mb-3
        .col
          label.form-label(for='fineStatus') Fine Status(USD)
          input#fineStatus.form-control(type='number' name='fineStatus' required='')
        .col
          label.form-label(for='status') Status
          select#status.form-control(name='status' required='')
            option(value='') Select Status
            option(value='available') Available
            option(value='borrowed') Borrowed
      .text-center
        button.btn.btn-primary(type='submit') Return Book
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')
script(src='.js/fine_calculation.js')
